import java.util.Scanner;
public class Main {
    public static int nextEven(int n){
        if (n%2==0)
            return n+2;
        else
            return n+1;
    }
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Insert an integer: ");
        int x = input.nextInt();
        System.out.printf("The next even number of %d is %d", x, nextEven(x));
    }
}
