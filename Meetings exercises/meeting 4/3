import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter 10 numbers: ");
        int x;
        int pos = 0;
        int neg = 0;
        int zeros = 0;
        for (int i = 1 ; i<=10 ; i++){
            x = input.nextInt();
            if (x>0)
                pos++;
            else if (x<0)
                neg++;
            else
                zeros++;
        }
        System.out.printf("You have entered %d positive numbers%n", pos);
        System.out.printf("You have entered %d Negative numbers%n", neg);
        System.out.printf("You have entered %d zeros", zeros);

    }
}
