import java.util.Scanner;
public class Main {
    public static double average(double[] arr){
        double sum = 0;
        for (int i = 0 ; i<arr.length ; i++){
            sum+=arr[i];
        }
        return (double)sum/arr.length;
    }
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        double[] numbers = new double[12];
        System.out.println("Enter your monthly expenses in 12 months: ");
        for (int i = 0 ; i<12 ; i++){
            numbers[i] = input.nextDouble();
        }
        double avg = average(numbers);
        int count = 0;
        for (int i = 0 ; i<12 ; i++){
            if (numbers[i]>avg)
                count++;
        }
        System.out.printf("The average monthly expense is: %.1f\n", avg);
        System.out.printf("There are %d months that had expenses above average", count);
    }
}
