import java.util.Scanner;
public class Main {
      public static double sumMajorDiagonal (double[][] m){
          double sum = 0;
          for (int i = 0; i<m.length ; i++){
              sum+=m[i][i];
          }
          return sum;
      }
      public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter a 2D array with 4 rows and 4 columns: ");
        double[][] data = new double[4][4];
        for (int i = 0 ; i<4 ; i++){
            for (int j = 0 ; j<4 ; j++)
                data[i][j] = input.nextDouble();
        }
        System.out.printf("Sum og the numbers in the major diagonal is: %.2f", sumMajorDiagonal(data));
    }
}
