import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter the number of words you would like to enter: ");
        int n = input.nextInt();
        System.out.printf("Enter %d words: \n", n);
        int sum = 0;
        for (int i = 0 ; i<4 ; i++){
            String word = input.next();
            sum+=word.length();
        }
        double avg = (double)sum/n;
        System.out.printf("The average length of the word you entered is: %.2f", avg);

    }
}
