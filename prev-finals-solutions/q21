import java.util.Scanner;
public class Main {
    public static boolean isDivisible (int n ){
        if (n%3==0 ^ n%5==0)
            return true;
        else
            return false;
    }
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Please, insert integer values (one per line), enter 0 to finish: ");
        int x = input.nextInt();
        while (x!=0){
            if (isDivisible(x))
                System.out.println("It is divisible by 3 or 5 but not both");
            else
                System.out.println("It is NOT divisible by 3 or 5 but not both");
            x= input.nextInt();
        }
    }
}
