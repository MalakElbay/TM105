import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("How many triangles do you have?");
        int N = input.nextInt();
        int p = 0;
        int max = -1;
        System.out.println("Please, insert lengths of the sides of these triangles, 3 per line: ");
        for (int i = 0 ; i<N ; i++){
            int a = input.nextInt();
            int b = input.nextInt();
            int c = input.nextInt();
            p = a+b+c;
            if (p>max)
                max = p;
        }
        System.out.printf("The maximum parameter is: %d", max);

    }
}
